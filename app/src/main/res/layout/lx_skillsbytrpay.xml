<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >

        </android.support.v7.widget.Toolbar>

        <Button
            android:id="@+id/back_icon_resultClass"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/lx_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="支付订单"
            android:textColor="#ffffff"
            android:textSize="21dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View  android:layout_height="36dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                />
            <TextView
                android:layout_height="36dp"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:text="定制技能名称:" />
            <TextView
                android:id="@+id/skillTitle_Trpay"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="9"
                android:text="这里显示商品名称"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View  android:layout_height="36dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                />
            <TextView
                android:layout_height="36dp"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:text="价格（元）:￥" />
            <TextView
                android:id="@+id/skillPrice_Trpay"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="9"
                android:text="这里显示商品价格"
                android:textColor="#d20707"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="8dp"
                android:layout_height="28sp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_gravity="center_vertical"
                android:background="#2b92ec"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:text="   请选择支付方式"
                android:textColor="#2b92ec"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp"
            android:background="#DBDBDB"/>
        <!--AliPay-->
        <LinearLayout
            android:id="@+id/to_alipay"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingTop="6px">
            <ImageView
                android:layout_width="84px"
                android:layout_height="84px"
                android:background="@drawable/lx_alipaylogo"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:layout_gravity="center_vertical"
                android:textSize="18dp"
                android:layout_marginLeft="16dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lx_more"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="210dp"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:background="#DBDBDB"/>

        <!--WePay-->
        <LinearLayout
            android:id="@+id/to_wechatpay"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingTop="6px">
            <ImageView
                android:layout_width="93px"
                android:layout_height="82px"
                android:background="@drawable/lx_wechatpaylogo"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:layout_gravity="center_vertical"
                android:textSize="18dp"
                android:layout_marginLeft="12dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lx_more"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="190dp"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:background="#DBDBDB"/>



    </LinearLayout>


</LinearLayout>